<div class="mx-auto w-75 p-5">
<h1>Link Listing</h1>
</div>
<table class="table table-striped table-bordered w-75 mx-auto">
  <thead>
    <tr>
      <th></th>
      <th>Shortened Link</th>
      <th>Link</th>
    </tr>
  </thead>

  <% @links.each do |link| %>
    <tr>
      <td><%= link_to 'Show', link_url(link) %></td>
      <td><a href="<%= @base_url %><%= link.link_id %>"><%= @base_url %><%= link.link_id %></a></td>
      <td><a href="<%= link.link %>"><%= link.link %></a></td>
    </tr>
  <% end %>
</table>